  Click an MSOA to view its addresses
<% end %>

<%= will_paginate msoas, :previous_label => '&lt; Prev', :next_label => 'Next &gt;' %>
<table class="caseloads">
  <thead>
    <tr>
      <th>MSOA Code</th>
      <th>MSOA Name</th>
    </tr>
  </thead>
  <tbody>
  <% msoas.each_with_index do |msoa, i| %>
    <tr class="<%= i.even? ? 'even' : 'odd ' %>">
      <td><%=h msoa['msoa11cd'] %></a></td>
      <td><a href="/regions/<%=h region_code %>/las/<%=h local_authority_code %>/msoas/<%=h msoa['msoa11cd'] %>/addresses"><%=h msoa['msoa11nm'] %></a></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate msoas, :previous_label => '&lt; Prev', :next_label => 'Next &gt;' %>

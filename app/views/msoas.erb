<%= erb :menu, locals: { pageid: "addresses" } %>

<% content_for :breadcrumbs do %>
  <a href="/regions">Regions</a> &gt; <a href="/regions/<%=h region_code %>/las">Region <%=h region_code %></a> &gt; LA <%=h local_authority_code %>
<% end %>

<% content_for :sub_heading do %>
  Click an MSOA to view its addresses
<% end %>

<%= will_paginate msoas, :previous_label => '&lt; Prev', :next_label => 'Next &gt;' %>
<table class="primary">
  <thead>
    <tr>
      <th>MSOA Code</th>
      <th>MSOA Name</th>
    </tr>
  </thead>
  <tbody>
  <% msoas.each_with_index do |msoa, i| %>
    <tr class="<%= i.even? ? 'even' : 'odd ' %>">
      <td><%=h msoa['code'] %></a></td>
      <td><a href="/regions/<%=h region_code %>/las/<%=h local_authority_code %>/msoas/<%=h msoa['code'] %>/addresses"><%=h msoa['name'] %></a></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate msoas, :previous_label => '&lt; Prev', :next_label => 'Next &gt;' %>

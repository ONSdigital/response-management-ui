<%= erb :menu, locals: { pageid: 'home' } %>

<% content_for :breadcrumbs do %>
<a href="/">Home</a> &gt; <%=h collectionexerciseid %> &gt; Collection Exercise
<% end %>

<table class="primary">
  <thead>
    <tr>
      <th>Collection Exercise</th>
      <th>Name</th>
      <th>Scheduled Execution Date</th>
      <th>Schedules Start Date</th>
    </tr>
  </thead>
  <tbody>
      <% if collectionexercise['id'].present? %>
        <td><%=h collectionexercise['id'] %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <% if collectionexercise['name'].present? %>
        <td><%=h collectionexercise['name'] %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <% if collectionexercise['scheduledExecutionDateTime'].present? %>
        <td><%=h collectionexercise['scheduledExecutionDateTime'] %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <% if collectionexercise['scheduledStartDateTime'].present? %>
        <td><%=h collectionexercise['scheduledStartDateTime'] %></td>
      <% else %>
        <td>-</td>
      <% end %>
    </tr>
  </tbody>
</table>

<h3>Action Plans</h3>

<% if actionplans.any? %>
  <table class="secondary">
    <thead>
      <tr>
        <th>Action Plan ID</th>
        <th>Sample Unit Type</th>
        <th>Name</th>
        <th>description</th>
      </tr>
    </thead>
    <tbody>
    <% actionplans.each_with_index do |actionplan, i| %>
      <tr class="<%= i.even? ? 'even' : 'odd ' %>">
      <% if actionplan['actionPlanId'].present? %>
        <td><%=h actionplan['actionPlanId'] %></td>
        <% else %>
          <td>-</td>
        <% end %>
      <% if actionplan['sampleUnitType'].present? %>
        <td><%=h actionplan['sampleUnitType'] %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <% if actionplan['name'].present? %>
        <td><%=h actionplan['name'] %></td>
      <% else %>
        <td>-</td>
      <% end %>
      <% if actionplan['description'].present? %>
        <td><%=h actionplan['description'] %></td>
      <% else %>
        <td>-</td>
      <% end %>
      </tr>
    <% end %>
      </tbody>
    </table>
<% else %>
  <p id="information"><strong>There are no action plans for this collection exercise.</strong></p>
<% end %>
